<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="homepage.KeywordSearchController">
    <center>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="search" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#getSearchResults" prefHeight="40.0" prefWidth="40.0" styleClass="btn_banner">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@fx-images/1x/outline_search_black_24dp.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <TextField fx:id="keywordField" alignment="CENTER" minWidth="400.0" onAction="#getSearchResults" prefHeight="40.0" promptText="Search" />
                <MenuButton fx:id="extension" mnemonicParsing="false" prefHeight="40.0" styleClass="btn_banner">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@fx-images/1x/outline_reorder_black_24dp.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </MenuButton>
            </children>
        </HBox>
    </center>
    <left>
        <ImageView fitHeight="100" fitWidth="100" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
            <image>
                <Image url="@fx-images/cooking_logo.jpg" />
            </image>
            <BorderPane.margin>
                <Insets right="100.0" />
            </BorderPane.margin>
        </ImageView>
    </left>
    <right>
        <MenuButton alignment="TOP_LEFT" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="40.0" styleClass="btn_banner" BorderPane.alignment="CENTER">
            <graphic>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@fx-images/1x/outline_account_circle_black_24dp.png" />
                    </image>
                </ImageView>
            </graphic>
            <items>
                <MenuItem fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonPress" text="login" />
                <MenuItem fx:id="registrationButton" mnemonicParsing="false" onAction="#registrationButtonPress" text="Registration" />
            </items>
            <BorderPane.margin>
                <Insets right="20.0" />
            </BorderPane.margin>
        </MenuButton>
    </right>
</BorderPane>
